version: '3'
services:
  site:
    image: nuxed/hello-world:latest
#    ports: 8080:8080
    labels:
      - traefik.port=8080
      - traefik.docker.network=webgateway
      - traefik.frontend.priority=50
      - traefik.frontend.rule=Host:domain
    volumes:
      - nuxed-hello-world:/var/www/nuxed-hello-world
    networks:
      - webgateway 
volumes:
  nuxed-hello-world:
    external: true

networks:
    webgateway:
      external: true
  
